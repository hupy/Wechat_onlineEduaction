/* components/pinke/pinke.wxss */
.pinke {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 35rpx;
    border-top: 1px solid #E5E5E5;
    background-color: #FFFFFF;
    padding-top: 5rpx;
    padding-left: 20rpx;
    margin-top: 10px;
}

.pinke-title {
    width: 100%;
    font-size: 26rpx;
    /* border-bottom: 1px solid #d9d9d9; */

}

.portrait-img {
    width: 55rpx;
    height: 55rpx;
    margin-right:6px; 
    border-radius: 50%;
}

.pinke-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    justify-content: space-between;
}

.pinke-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 25rpx;
}

.pinke-font {
    font-size: 20rpx;
}

.center{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}