/**index.wxss**/
.image {
  width: 100%;
}

.group {
  margin: 20px 0 20px 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.groupitem {
  display: flex;
  flex-direction: column;
  width: 33%;
  align-items: center;
}

.main {
  width: 95%;
  padding-top: 20rpx;
  border: 0rpx solid #000;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 10rpx #E7E8EA;
  margin-bottom: 10px;
}

.weui-media-box__thumb {
  width: 100%;
  height: 100%;
  vertical-align: top;
  border-radius: 50%;
}

.title {
  display: flex;
  flex-direction:space-between;
  font-size:26rpx;
  align-items: center;
  justify-content: center;
  color: #B7B6B6;
}

.teacList {
  display: flex;
  flex-direction: row;
  line-height: 30rpx;
  width: 85%;
  margin-top: 25rpx;
  border-radius: 10rpx;
  font-family: "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
  box-shadow: 3rpx 3rpx 10rpx 0rpx #C3C3C3;
  padding-top: 10rpx;
  padding-left: 5%;
  margin-left: 5%;
}

.name {
  margin-left: 10rpx;
  font-weight: bold;
  font-size: 26rpx;
}

.resume {
  margin-left: 10rpx;
  margin-top: 15rpx;
  font-size: 23rpx;
  color: #7F7F7F;
}

.right {
  width: 10%;
  justify-content: right;
}