/* pages/teacher/teacher.wxss */

.page {
    background-color: #ffffff;
}

.label{
    font-size: 30rpx;
    font-weight: 550;
}

.grade {
    width: 100rpx;
    height: 90rpx;
    font-size: 25rpx;
    background-color: #E8AB53;
    color: azure;
    border-radius: 20rpx;
    float: top;
}

.page__bd {
    height: 100%;
}

.page__bd {
    padding-bottom: 0;
}

.weui-tab__content {
    display: flex;
    justify-content: center;
    padding-top: 10rpx;
    width: 100%;
    height: 100%;
    line-height: 35rpx;
}

.title {
    font-weight: 550;
    font-size: 33rpx;
}

.desc {
    font-weight: 200;
    font-size: 30rpx;
    margin-top: 5px;
    margin-bottom: 40px;
}

.resume {
    font-weight: 200;
    font-size: 30rpx;
    margin-top: 5px;
    margin-bottom: 40px;
    line-height: 1.5rem;
}

.education {
    font-weight: 200;
    font-size: 30rpx;
    margin-top: 5px;
    height:auto ;
}

.title-work{
    margin-top: 40px;
}

.workExperience {
    font-weight: 200;
    font-size: 30rpx;
}

.workExperience-desc{
    font-weight: 200;
    font-size: 30rpx;
    margin-top: 5px;
    color: #999;
}


/* .weui-media-box__title_in-text {
    margin-bottom: 1px
}*/

.weui-media-box__desc {
    width: 100%;
    color: #999;
    font-size: 13px;
    line-height: 1.2;
} 


.btn {
    width: 90%;
    margin-bottom: 20px;
    border: 1px solid #99D9EA;
    border-radius: 40rpx;
    background-color: #ffffff;
}

.btn-font {
    color: #99D9EA;
    font-size: 30rpx;
}


.row{
    display: flex;
    flex-direction: row;
    padding: 14px 15px 10px;
    flex-wrap: wrap;
}

.score{
    color:#F5A623;
    font-size: 2rem;
}

.column{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 10px;
}

.detail{
    font-size: 0.85rem;
    width: 100%;
}


.tag{
    text-align: center;
    width: 25%;
    font-size: 0.9rem;
    background-color: #E9E9E9;
    border-radius: 20px;
    margin-right: 10px;
    padding: 5px;
    margin-top: 10px;
}

.image{
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
}

.class_type{
    font-size: 0.80rem;
    width: 100%;
    color: rgb(196, 192, 192);
}

.comments{
    font-size: 0.80rem;
    padding-left: 5px;
}