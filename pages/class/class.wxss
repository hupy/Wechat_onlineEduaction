/* class.wxss */
.weui-navbar {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width: 100%;
    border-bottom: 1rpx solid #ccc
}

.weui-navbar__item {
    position: relative;
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 13px 0;
    text-align: center;
    font-size: 0
}

.weui-navbar__item.weui-bar__item_on {
    color: #1aad19
}

.weui-navbar__slider {
    position: absolute;
    content: " ";
    left: 0;
    bottom: 0;
    width: 7em;
    height: 3px;
    background-color: #1aad19;
    -webkit-transition: -webkit-transform .3s;
    transition: -webkit-transform .3s;
    transition: transform .3s;
    transition: transform .3s, -webkit-transform .3s
}

.weui-navbar__title {
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal
}

.page__bd {
    height: 100%;
}

.page__bd {
    padding-bottom: 0;
}

.weui-tab__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    line-height: 35rpx;
    background-color: #F7F8FA;
}

.main {
    width: 95%;
    margin-top: 10px;
    border: 0rpx solid #000;
    border-radius: 10px;
    box-shadow: 10rpx 10rpx 10rpx #E7E8EA;
    margin-bottom: 10px;
}

.title {
    width: 100%;
    font-size: 30rpx;
}

.head {
    display: flex;
    justify-content: right;
    align-items: right;
    flex-direction: row;
    padding-left: 15rpx;
}

.class_state {
    width: 100%;
    font-size: 25rpx;
    color: red;
    text-align: right;
}

.time {
    font-size: 20rpx;
    color: #7F7F7F;
    padding-left: 15rpx;
}

.center{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}